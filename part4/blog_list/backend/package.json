{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for blog list app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --verbose",
    "dev": "nodemon index.js",
    "build:ui": "cd ../frontend && npm run build && cp -r build ../backend",
    "deploy": "git push heroku master",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint ."
  },
  "author": "Benjamin Chew",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.13.1"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "nodemon": "^2.0.9"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
